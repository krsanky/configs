sticky yes
snapdist 16

color inactiveborder blue
color activeborder green
borderwidth 2

# terminal override
bind-key CM-Return 'xterm -geometry 100x30-2-2'

#COMMANDS MENU:
command Firefox firefox
command Epiphany epiphany
command Xterm 'xterm -geometry 100x30-2-2'

# GROUPS: use xprop to get these from each program
# 1-MEDIA
autogroup 1 "sakura,Media"
# 4-WEB
autogroup 4 "Firefox,Epiphany"

# desktops
bind-key CM-1 group-only-1
bind-key CM-2 group-only-2
bind-key CM-3 group-only-3
bind-key CM-4 group-only-4
bind-key CM-5 group-only-5
bind-key CM-6 group-only-6

bind-mouse S-1 window-raise

