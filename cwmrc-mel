sticky yes
snapdist 16

color inactiveborder darkblue
color activeborder blue
#color activeborder red
borderwidth 2

command xterm xterm
command Firefox firefox

# GROUPS
# 1-MEDIA
autogroup 1 "xterm"
# 4-WEB
autogroup 4 "Firefox"
#autogroup 4 "sakura,Web"

# change defaults to "group-only" (from just group)
bind-key CM-1 group-only-1
bind-key CM-2 group-only-2
bind-key CM-3 group-only-3
bind-key CM-4 group-only-4
bind-key CM-5 group-only-5
bind-key CM-6 group-only-6

